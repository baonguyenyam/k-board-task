section
	article.container.mt-5
		.row
			.col-lg-8.offset-lg-2
				form#addtask.box.card.validator.border-primary(role="validator")
					.card-header.bg-primary.text-white(ripple)
						h2.h5.mb-0 Thêm nhiệm vụ
					.card-body.p-3
						.row
							.col-lg
								.input-group.mb-4
									.input-group-prepend
										span.input-group-text Độ ưu tiên
									select#select.custom-select(required)
										option(value="0") Low
										option(value="1", selected) Normal
										option(value="2") Medium
										option(value="3") High
								.form-label-group.mb-4
									input#namepro.form-control(type='text', placeholder="Tên dự án")
									label(for="namepro") Tên dự án
								.form-label-group.mb-4
									input#color.form-control(type='text', placeholder="Màu sắc")
									label(for="color") Màu sắc
								.form-label-group.mb-4
									input#material.form-control(type='text', placeholder="Chất liệu")
									label(for="material") Chất liệu
							.col-lg
								.form-group.mb-4
									.custom-file
										input#customFile.custom-file-input(type='file', name="customFile")
										label#customFileLabel.custom-file-label(for='customFile') Chọn tập tin
								.form-label-group.mb-4
									input#text.form-control(type='text', placeholder="Title", required)
									label(for="text") Tiêu đề
								//- .form-label-group.mb-4
									input#datepicker.form-control(type="text", placeholder="Active Date (dd/mm/yyyy)", autocomplete="off", required)
								.form-label-group.mb-4
									textarea#message.form-control(rows="4", placeholder="Description", required)
									label(for="message") Nội dung

						.row
							.col.text-right
								button.add-button.btn.btn-primary(type='submit', name='btnAddNew', ripple)
									| Thêm mới
									i.fa.fa-save.ml-2
