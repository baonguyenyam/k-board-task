extends _layout.pug
block variables
	- var title = 'Thêm thành viên'
	- var hasmenu = 'hasmenu'
block header
	include _header.pug
block content
	if process.env.ENVGLOBAL === 'true'
		script
			if(ck.permision_adduser === 'true')
				include __adduser.js
			include ./assets/adduser.min.js
	else
		if(ck.permision_adduser === 'true')
			include __adduser
		script(key=val, src='./js/adduser.js?v='+text)
block footer
	if process.env.ENVGLOBAL === 'true'
		script
			include _footer.js
	else
		include _footer.pug
